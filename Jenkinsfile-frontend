pipeline {
  agent any

  environment {
    DOCKER_IMAGE = 'ahmedhoucine0/frontend:latest'
  }

  stages {

    stage('Clean Workspace') {
      steps {
        cleanWs()
      }
    }

    stage('Checkout Code') {
      steps {
        git 'https://github.com/ahmedhoucine/AI-consulting-app' 
      }
    }

    stage('Install Dependencies') {
      steps {
        dir('frontend') {
          sh 'npm ci'
        }
      }
    }

    stage('Build Angular App') {
      steps {
        dir('frontend') {
          sh 'npm run build --prod'
        }
      }
    }

    stage('Docker Build') {
      steps {
        sh 'docker build -t $DOCKER_IMAGE -f Dockerfile.frontend ./frontend'
      }
    }

    stage('Docker Push') {
      steps {
        withCredentials([string(credentialsId: 'docker-hub-token', variable: 'DOCKER_TOKEN')]) {
          sh '''
            echo $DOCKER_TOKEN | docker login -u ahmedhoucine0 --password-stdin
            docker push $DOCKER_IMAGE
          '''
        }
      }
    }

  }

  post {
    failure {
      echo '❌ Frontend pipeline failed.'
    }
    success {
      echo '✅ Frontend pipeline completed successfully.'
    }
  }
}
